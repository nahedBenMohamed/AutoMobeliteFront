{
  "compilerOptions": {
    "rootDir": "app",
    "target": "esnext",
    "lib": [
      "ES2020"
    ],
    "pretty": true,
    "allowJs": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": [
    "app"
  ],
  "exclude": [
    "node_modules"
  ]
}